<UserControl x:Class="ProgramDrawer.UserControls.SoundDevicesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgramDrawer.UserControls"
             mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="600">
    <StackPanel Margin="20,10,20,10">
        <Label Content="Sound Devices" FontSize="25" FontWeight="Bold" Padding="0,0,0,0"/>
        <Separator Background="{DynamicResource AccentColorBrush}" Margin="0,5,0,2" />

        <local:SoundDeviceListControl x:Name="OutputDevices" AudioTitle="Output Devices" Grid.Column="0" Margin="0,0,2,0"/>
        <local:SoundDeviceListControl x:Name="InputDevices" AudioTitle="Input Devices" Grid.Column="1" Margin="2,0,0,0"/>

        <Label Content="{Binding ElementName=OutputDevices,Path=SelectedAudioDevice.FullName}" />
        <Label Content="{Binding ElementName=InputDevices,Path=SelectedAudioDevice.FullName}" />
    </StackPanel>
</UserControl>
