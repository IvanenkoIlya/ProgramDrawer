<UserControl x:Class="ProgramDrawer.UserControls.SoundDevicesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProgramDrawer.UserControls"
             mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="600">
    <StackPanel Margin="20,10,20,10">
        <Label Content="Sound Devices" FontSize="25" FontWeight="Bold" Padding="0,0,0,0"/>
        <Separator Background="{DynamicResource AccentColorBrush}" Margin="0,5,0,2" />
        <local:SoundDeviceManager x:Name="OutputDevices" AudioTitle="Output Devices"/>
        <local:SoundDeviceManager x:Name="InputDevices" AudioTitle="Input Devices"/>
    </StackPanel>
</UserControl>
